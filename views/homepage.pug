html
    head 
        title= `${title}`
        meta(name="viewport" content="width=device-width, initial-scale=1")
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css")
        link(rel="stylesheet", href="/css/style.css")
        link(rel='stylesheet', href='https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css')
        
        link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css')
        script(src='https://code.jquery.com/jquery-3.6.0.min.js')
        script(src='https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js')
    body 
     div.container     
        h1 Favorite Shop
        a(href="/update-cobj", class="link") Add to this table
        br
        div
            table#shopTable(border="1")
                thead
                    tr
                        th Name
                        th SKU
                        th Product Id
                        th Edit
                tbody
                    each shop in data
                        tr
                            td= shop.properties.name
                            td= shop.properties.sku
                            td= shop.properties.product_id
                            td
                                a(href=`/update-cobj/${shop.properties.hs_object_id}`, title="Edit")
                                    i.fa.fa-edit(style="color: green; cursor: pointer; margin-right: 10px;")
                                a(href=`/delete-cobj/${shop.properties.hs_object_id}`, title="Delete", onclick="return confirm('Are you sure you want to delete this?')")
                                    i.fa.fa-trash(style="color: red; cursor: pointer;")
            script.
                $(document).ready(function() {
                    $('#shopTable').DataTable();
                });