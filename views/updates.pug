html
  head 
    title= `${title}`
    meta(name="viewport", content="width=device-width, initial-scale=1")
    link(rel="stylesheet", href="/css/style.css")
  body    
    h1= data ? 'Update Favorite Shop' : 'Add Favorite Shop'
    a(href="/", class="link") Return to the Homepage

    form(action= data ? `/update-cobj/${data.properties.hs_object_id}` : "/update-cobj", method="POST")
      table
        tbody
          tr
            td
              label(for="name") Name:
                span.required *
            td
              input(
                type="text", 
                name="name", 
                required, 
                class="rounded-input", 
                value= data ? data.properties.name : ''
              )
          tr
            td
              label(for="sku") SKU:
                span.required *
            td
              input(
                type="text", 
                name="sku", 
                required, 
                class="rounded-input", 
                value= data ? data.properties.sku : ''
              )
          tr
            td
              label(for="product_id") Product ID:
            td
              input(
                type="number", 
                name="product_id",  
                class="rounded-input", 
                value= data ? data.properties.product_id : ''
              )
      button(type="submit", class="rounded-button")= data ? 'Update' : 'Add'